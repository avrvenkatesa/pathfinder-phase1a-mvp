{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": [
    "server/errors/**/*.ts",
    "server/middleware/error-handler.ts",
    "server/middleware/legacy-error-shim.ts",
    "server/routes/instances*.ts",
    "server/routes/**/instances*.ts",
    "server/routes/workflows*.ts",
    "server/routes/**/workflows*.ts",
    "server/db.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "server/index.ts",
    "server/vite.ts",
    "vite.config.ts",
    "server/config/**",
    "server/middleware/security.ts",
    "server/controllers/**",
    "server/services/**",
    "server/storage.ts",
    "server/routes.ts",
    "server/routes/index.ts"
  ]
}
